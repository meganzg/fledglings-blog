{
  "kind": "collectionType",
  "collectionName": "blogposts",
  "info": {
    "singularName": "blogpost",
    "pluralName": "blogposts",
    "displayName": "Blogpost",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true,
      "minLength": 1
    },
    "Text": {
      "type": "text",
      "required": true,
      "minLength": 1
    },
    "Date": {
      "type": "datetime",
      "required": true
    },
    "Author": {
      "type": "string",
      "required": true
    },
    "Media": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "Published": {
      "type": "boolean",
      "required": true
    },
    "Genre": {
      "type": "enumeration",
      "enum": [
        "fiction",
        "poetry",
        "nonfiction"
      ],
      "required": true
    },
    "related_posts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::blogpost.blogpost"
    }
  }
}
